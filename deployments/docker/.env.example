# =============================================================================
# K-ERP Docker Environment Variables
# Copy to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
# APP_ENV=staging
# APP_ENV=production

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kerp
DB_USER=kerp
DB_PASSWORD=kerp123_change_in_production

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# NATS
# -----------------------------------------------------------------------------
NATS_HOST=nats
NATS_PORT=4222

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
JWT_SECRET=change-this-to-a-long-random-string-at-least-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# -----------------------------------------------------------------------------
# MinIO (S3-compatible storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=kerp_admin
MINIO_ROOT_PASSWORD=minio123_change_in_production
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=kerp-files

# -----------------------------------------------------------------------------
# Meilisearch (Full-text search)
# -----------------------------------------------------------------------------
MEILI_KEY=meili123_change_in_production
MEILI_HOST=meilisearch
MEILI_PORT=7700

# -----------------------------------------------------------------------------
# Python Services (gRPC)
# -----------------------------------------------------------------------------
TAX_SCRAPER_HOST=tax-scraper
TAX_SCRAPER_PORT=50051
INSURANCE_EDI_HOST=insurance-edi
INSURANCE_EDI_PORT=50052

# -----------------------------------------------------------------------------
# External API Keys (Government Integration)
# -----------------------------------------------------------------------------
# Popbill (Tax Invoice ASP)
# POPBILL_LINK_ID=
# POPBILL_SECRET_KEY=
# POPBILL_IS_TEST=true

# Hometax (Direct scraping)
# HOMETAX_CERT_PATH=/app/certs

# 4대보험 EDI
# NPS_EDI_ID=
# NHIS_EDI_ID=
# EI_EDI_ID=
# WCI_EDI_ID=

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# SSL/TLS (Let's Encrypt)
# -----------------------------------------------------------------------------
ACME_EMAIL=admin@abada.kr
# Use letsencrypt-staging for testing to avoid rate limits
# CERT_RESOLVER=letsencrypt-staging

# -----------------------------------------------------------------------------
# Monitoring (Prometheus & Grafana)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123_change_in_production

# -----------------------------------------------------------------------------
# Ports (for docker-compose)
# -----------------------------------------------------------------------------
API_PORT=8080
WEB_PORT=3000
TRAEFIK_PORT=80
TRAEFIK_DASHBOARD_PORT=8081
