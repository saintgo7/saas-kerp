# Insurance EDI Service Configuration
# Copy this file to .env and fill in your values

# Service settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# gRPC server
GRPC_HOST=0.0.0.0
GRPC_PORT=50052
GRPC_MAX_WORKERS=10

# NPS (국민연금) EDI server
NPS_EDI_HOST=edi.nps.or.kr
NPS_EDI_PORT=9100
NPS_EDI_TIMEOUT=30

# NHIS (건강보험) EDI server
NHIS_EDI_HOST=edi.nhis.or.kr
NHIS_EDI_PORT=9100
NHIS_EDI_TIMEOUT=30

# EI (고용산재) EDI server
EI_EDI_HOST=edi.comwel.or.kr
EI_EDI_PORT=9100
EI_EDI_TIMEOUT=30

# Encryption (ARIA-128)
# Generate with: python -c "import secrets; print(secrets.token_hex(16))"
ARIA_ENCRYPTION_KEY=

# Certificate paths
CERT_PATH=/app/certs
PRIVATE_KEY_PATH=
PUBLIC_KEY_PATH=
