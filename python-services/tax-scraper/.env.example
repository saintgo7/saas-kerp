# Tax Scraper Service Environment Configuration
# K-ERP SaaS - Phase 5: Tax/Hometax Integration

# Service
ENV=development
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# gRPC Server
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_WORKERS=10
GRPC_REFLECTION_ENABLED=true

# Hometax Configuration
HOMETAX_BASE_URL=https://www.hometax.go.kr
HOMETAX_TIMEOUT=30
HOMETAX_RETRY_COUNT=3
HOMETAX_RETRY_DELAY=1.0

# Browser (Playwright)
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=0
BROWSER_TIMEOUT=30000

# Popbill API Configuration
# Get credentials from https://www.popbill.com
POPBILL_LINK_ID=
POPBILL_SECRET_KEY=
POPBILL_IS_TEST=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Encryption (SEED for Korean government systems)
# Generate with: python -c "from Crypto.Random import get_random_bytes; print(get_random_bytes(16).hex())"
SEED_ENCRYPTION_KEY=
